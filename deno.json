{
  "tasks": {
    "run_main": "deno run --allow-all src/main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "chalk": "npm:chalk@^5.4.1"
  },
  "lint": {
    "include": ["src/"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "bracePosition": "nextLine",
    "newLineKind": "lf",
    "spaceAround": false,
    "trailingCommas": "onlyMultiLine",
    "nextControlFlowPosition": "nextLine",
    "operatorPosition": "nextLine",
    "useBraces": "whenNotSingleLine"
  }
}
